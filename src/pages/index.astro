---
import Jumbotron from "../components/Jumbotron.astro";
import Layout from "../layouts/Layout.astro";
import Image from '../assets/img/menu-navideno.jpg';
import MenuSection from "../components/MenuSection.astro";
import {menuData} from '../data/menu-navideno'

---

<Layout title="Menu Navideño El Antiguo Sabor">
	<Jumbotron imageName={Image} />

	<section id="main-title">
		<h1>Menu Navideño {menuData.year}</h1>
		<hr>
	</section>
	
	<section class="menu-wrapper">
		{menuData.sections.map(section => (
			<MenuSection section={section}/>
		))}
	</section>
	
</Layout>


<style>
	#main-title {
		padding: 10px 1px;
		text-align: center;
		margin-bottom: 20px;
	}
	
	#main-title h1 {
		font-size: var(--font-size-l);
		color: var(--color-primary);
		line-height: 1em;
		font-family: var(--font-family-secondary);
	}

	.menu-wrapper  {
		margin: 1% 8%;
	}

	@media only screen and (max-width: 579px) {
		.menu-wrapper  {
			margin: 1% 6% ;
		}
	}

	@media only screen and (min-width: 580px) and (max-width: 768px)  {
		.menu-wrapper  {
			margin: 1% 15% ;
		}
	}

	@media only screen and (min-width: 769px) and (max-width: 1204px)  {
		.menu-wrapper  {
			margin: 1% 23%;
		}
	}
</style>