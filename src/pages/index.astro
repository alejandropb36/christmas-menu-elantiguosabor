---
import Jumbotron from "../components/Jumbotron.astro";
import Layout from "../layouts/Layout.astro";
import Image from '../assets/img/menu-navideno.jpg';

const year = '2022';
---

<Layout title="Menu Navideño El Antiguo Sabor">
	<Jumbotron imageName={Image} />
	<section id="title">
		<h1 id="main-title">Menu Navideño {year}</h1>
	</section>
</Layout>


<style>
	#title {
		align-items: center;
		text-align: center;
	}

	#title h1 {
		font-size: var(--font-size-l);
		color: var(--color-primary);
	}
	
</style>