---
interface MenuItem {
  title: string;
  description: string;
  price: string;
  image: string;
}

interface Props {
  item: MenuItem;
}

const {
  item = {
    title: "",
    description: "",
    price: "",
    image: "",
  },
} = Astro.props;
---

<div class="menu-item">
  <img src={item.image} alt={item.title} />
  <div class="menu-item-content">
    <h3>{item.title} <span>{item.price}</span></h3>
    <p set:html={item.description}></p>
  </div>
</div>

<style>
  .menu-item {
    flex-basis: 500px;
    margin-bottom: 40px;
    padding-bottom: 40px;
    border-bottom: 1px solid var(--color-gray-light-2);
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  /*.menu-item:nth-child(5), .menu-item:nth-child(6) {
        border-bottom: 0;
    }*/

  .menu-item img {
    max-width: 180px;
    margin-right: 30px;
    border-radius: 50%;
    border: 1px solid var(--color-gray-light-2);
    padding: 3px;
    transition: 0.5s;
  }

  .menu-item:hover img {
    border-radius: 0;
  }
  .menu-item-content {
    width: 100%;
  }

  .menu-item-content h3 {
    text-transform: capitalize;
    font-size: 18px;
    border-bottom: 1px dashed var(--color-gray-dark);
    margin-bottom: 5px;
    padding-bottom: 5px;
    font-weight: bold;
  }

  .menu-item-content h3 span {
    float: right;
    color: var(--color-third);
    font-style: italic;
    font-weight: bold;
  }

  @media only screen and (max-width: 499px) {
    .menu-item {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>
