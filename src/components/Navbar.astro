---
import logo from "../../assets/img/logo.png";
---

<nav>
  <a href="#" class="navbar__logo">
    <img src={logo} />
    <span>El Antiguo Sabor</span>
  </a>

  <ul class="navbar">
    <li>
      <a href="#" class="active"> Menu Navide√±o</a>
    </li>
    <li>
      <!-- https://elantiguosabor.com -->
      <a href="#"> Inicio</a>
    </li>
    <li>
      <!-- https://elantiguosabor.com/servicios -->
      <a href="#"> Servicios</a>
    </li>
    <li>
      <!-- https://elantiguosabor.com/quienes-somos -->
      <a href="#"> Sobre nosotros</a>
    </li>
  </ul>

  <div class="navbar__main">
    <div class="bx bx-menu" id="navbar__main-icon"></div>
  </div>
</nav>

<script>
  const menu = document.querySelector("#navbar__main-icon");
  const navbar = document.querySelector(".navbar");

  menu?.addEventListener("click", () => {
    menu?.classList.toggle("bx-x");
    navbar?.classList.toggle("navbar__open");
  });
</script>

<style>
  nav {
    /* background: rgba(245, 245, 245, 0.877) !important; */
    position: fixed;
    width: 100%;
    top: 0;
    right: 0;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: transparent;
    padding: 28px 12%;
    transition: all 0.5s ease;
  }

  .navbar__logo {
    display: flex;
    align-items: center;
  }

  .navbar__logo img {
    width: 50px;
  }

  .navbar__logo span {
    font-size: var(--font-size-s);
    font-weight: 600;
  }

  .navbar {
    display: flex;
  }

  .navbar a {
    font-size: var(--font-size-s);
    font-weight: 500;
    padding: 5px 0;
    margin: 0px 30px;
    transition: all 0.5s ease;
  }

  .navbar a:hover {
    color: var(--color-primary);
  }

  .navbar a.active {
    color: var(--color-primary);
  }

  .navbar__main {
    display: flex;
    align-items: center;
  }

  .navbar__main a {
    font-size: var(--font-size-s);
    font-weight: 500;
    padding: 5px 0;
    margin: 0px 30px;
    transition: all 0.5s ease;
  }

  #navbar__main-icon {
    font-size: var(--font-size-m);
    cursor: pointer;
    z-index: 101;
    display: none;
  }

  @media (max-width: 1280px) {
    nav {
      padding: 14px 2%;
      transition: 0.2s;
    }

    .navbar a {
      padding: 5px 0;
      margin: 0px 20px;
    }
  }

  @media (max-width: 1090px) {
    #navbar__main-icon {
      display: block;
    }

    .navbar {
      position: absolute;
      top: 100%;
      right: -100%;
      width: 270px;
      /* height: 29vh; */
      background: var(--color-secondary-light);
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      border-radius: 10px;
      transition: all 0.5s ease;
    }

    .navbar a {
      display: block;
      margin: 12px 0;
      padding: 0px 25px;
      transition: all 0.5s ease;
    }

    .navbar a:hover {
      color: var(--color-black);
      transform: translateY(5px);
    }

    .navbar a.active {
      color: var(--color-black);
    }

    .navbar.navbar__open {
      right: 2%;
    }
  }
</style>
